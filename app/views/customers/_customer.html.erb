<div class="customer-card">
  <h3><%= customer.full_name %></h3>
  <p><strong>Phone:</strong> <%= customer.phone_number.presence || "N/A" %></p>
  <p><strong>Email:</strong> <%= customer.email.presence || "N/A" %></p>
  <p><strong>Notes:</strong> <%= customer.notes.presence || "No additional notes" %></p>

  <% if customer.image.attached? %>
    <div class="customer-image">
      <%= image_tag customer.image, width: 100 %>
    </div>
  <% else %>
    <p>No Image Available</p>
  <% end %>
</div>
